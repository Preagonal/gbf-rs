{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all"
  ],
  "baseBranches": [
    "dev"
  ],
  "branchPrefix": "feature/renovate/",
  "postUpdateOptions": [
    "npmDedupe",
    "yarnDedupeFewer"
  ],
  "automerge": false,
  "postUpgradeTasks": {
    "commands": [
      "pip install -r ./scripts/requirements.txt",
      "python3 ./scripts/version.py --bump patch"
    ],
    "fileFilters": [
      "**/*"
    ],
    "executionMode": "update"
  }
}
